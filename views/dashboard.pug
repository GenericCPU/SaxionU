extends ./layouts/main-layout.pug

block styles
    link(rel='stylesheet', href='../public/css/bootstrap.profile.design.css')

block content
        main
            hr       
            a.button.feature(href="/") Login Page
            a.button(href="https://docs.handcash.dev/examples/#authentication") 🔗   
