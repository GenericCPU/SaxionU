                    input(type='text', placeholder='amount to each (in Đuros)', name='amount')
                    br
                    input(type='text', placeholder='note', name='note')
                    p
                    a.button.feature(type="submit") MultiParty Transaction
                a.button(href="https://docs.handcash.dev/examples/") 🔗     

            p
            hr
            form(action='/auth/test-data', method='post')
                input(type='text', placeholder='text', name='text')
                p
                a.button.feature(type="submit") Attachment Transaction 
            a.button(href="https://docs.handcash.dev/examples/") 🔗     
            p
            hr
            .search-container
                form(action='/auth/encrypt', method='post')
                    input(type='text', placeholder='text', name='encryptText')
                    p
                    a.button.feature(type="submit") Encrypted Data
            a.button(href="https://docs.handcash.dev/examples/") 🔗     

            p
            p
            hr
            .search-container
                form#get-tx-form(method="get", action='/auth/get-transaction')
                    input(type='text', placeholder='txid', name='txid')
                    p
                    a.button.feature(type="submit") View Transaction
                a.button(href="https://docs.handcash.dev/examples/") 🔗     
            